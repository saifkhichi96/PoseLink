<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saifkhichi.poselink">

    <!-- Permissions required for recording and streaming features. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Requires OpenGL ES 2.0 for camera preview and rendering. -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- Camera hardware required (app cannot run without it). -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- FileProvider for secure file sharing between apps. -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.saifkhichi.poselink.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <!--
            MainActivity: App launcher and entry point.
            Handles permission checks and redirects to CameraActivity.
        -->
        <activity
            android:name=".app.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
            CameraActivity: Main camera interface for recording and preview.
            Handles orientation and configuration changes.
        -->
        <activity
            android:name=".app.camera.CameraActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            tools:ignore="DiscouragedApi,LockedOrientationActivity" />

        <!--
            ImuViewerActivity: Displays IMU sensor data.
            Navigable from CameraActivity.
        -->
        <activity
            android:name=".app.sensors.ImuViewerActivity"
            android:exported="true"
            android:label="@string/title_imu"
            android:parentActivityName=".app.camera.CameraActivity" />

        <!--
            RecordingsActivity: Lists and manages saved recordings.
            Navigable from CameraActivity.
        -->
        <activity
            android:name=".app.recordings.RecordingsActivity"
            android:exported="true"
            android:label="@string/title_recordings"
            android:parentActivityName=".app.camera.CameraActivity" />

        <!--
            AboutActivity: Shows app information and credits.
            Navigable from CameraActivity.
        -->
        <activity
            android:name=".app.settings.AboutActivity"
            android:exported="true"
            android:label="@string/title_about"
            android:parentActivityName=".app.camera.CameraActivity" />

        <!--
            SettingsActivity: App preferences and configuration.
            Navigable from CameraActivity.
        -->
        <activity
            android:name=".app.settings.SettingsActivity"
            android:exported="true"
            android:label="@string/title_settings"
            android:parentActivityName=".app.camera.CameraActivity" />

    </application>

</manifest>